<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDD"/> <!-- Pozadina CardView-a -->
        </shape>
    </item>

    <!-- Bottom border layer -->
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Boja donjeg ruba -->
        </shape>
    </item>

</layer-list>
